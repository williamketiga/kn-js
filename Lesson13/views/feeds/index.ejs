<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Social Media</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02"
                aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/register">Sign up</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/login">Sign in</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <h1 class="text-center">Feeds for you</h1>
        </div>
        <div class="row">
            <div class="container mt-4">
                <% if (user) %>
                <div class="row mb-4 text-center">
                    <div class="mb-1">Welcome back, <%= user.username %></div>
                    <p class="mb-0">Share your thoughts</p>
                </div>
            </div>
        </div>
        <div class="row">
            <button type="button" class="btn btn-primary" style="width:150px">
                <a href="post/" style="text-decoration:none;color:white;">Create post</a>
            </button>
        </div>
        <div class="row">
            <div class="container mt-2 mb-2">
                <% if(posts) {%>
                    <div class="row text-center text-success">
                        <p>New posts available</p>
                    </div>
                <% } %>
            </div>
        </div>
        <div class="row">
            <div class="container mt-4 d-flex align-items-center flex-column mb-3">
                <% if (posts) {%>
                    <% posts.forEach(function(post){ %>
                        <div class="card align-items-center mb-2 mt-2" style="max-width:300px;">
                            <img src="<%= post.imageUrl %>" class="card-img-top">
                            <iframe src="<%= post.videoUrl %>"></iframe>
                            <div class="card-body">
                                <h5 class="card-title"><%= post.caption %></h5>
                                <p class="card-text">Created by <%= post.userId.username %></p>
                            </div>
                        </div>
                    <% }) %>
            </div>
            <% } %>
        </div>
    </div>
    <script src="/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>